<?xml version='1.0' encoding='UTF-8'?>
<hibernate-configuration>
    <session-factory >

        <!-- mysql数据库驱动 -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <!-- mysql数据库名称 -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/anyquant?charset=utf8;characterEncoding=utf8</property>
        <!-- 数据库的登陆用户名 -->
        <property name="hibernate.connection.username">root</property>
        <!-- 数据库的登陆密码 -->
        <property name="hibernate.connection.password">123456</property>
        <!-- 编码方式 -->
        <property name="connection.characterEncoding">utf8</property>
        <!-- 方言：为每一种数据库提供适配器，方便转换 -->
        <!--<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>-->

        <mapping class="dao.entity.IndustryAttribute"/>
        <mapping class="dao.entity.IndustryBase"/>
        <mapping class="dao.entity.StockAttribute"/>
        <mapping class="dao.entity.StockBase"/>
        <mapping class="dao.entity.BenchmarkAttribute"/>
        <mapping class="dao.entity.BenchmarkBase"/>
        <mapping class="dao.entity.TradeDao"/>
        <mapping class="dao.entity.InfoMineDao"/>
        <mapping class="dao.entity.Variance"/>


    </session-factory>
</hibernate-configuration>